#change window focus within space
ctrl + shift - j : yabai -m window --focus south
ctrl + shift - k : yabai -m window --focus north
ctrl + shift - h : yabai -m window --focus west
ctrl + shift - l : yabai -m window --focus east

#change focus between external displays (left and right)
ctrl + shift - p: yabai -m display --focus west
ctrl + shift - o: yabai -m display --focus east

ctrl + shift - n: yabai -m window --focus stack.prev
ctrl + shift - m: yabai -m window --focus stack.next

# maximize a window
ctrl + shift - z : yabai -m window --toggle zoom-fullscreen

# toggle window float
ctrl + shift - x : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Activate Stack layout
ctrl + shift - c : yabai -m space --layout stack

# Activate BSP layout
ctrl + shift - v : yabai -m space --layout bsp

# swap windows
alt + ctrl - j : yabai -m window --swap south
alt + ctrl - k : yabai -m window --swap north
alt + ctrl - h : yabai -m window --swap west
alt + ctrl - l : yabai -m window --swap east

# move window to display left and right
alt + ctrl - p : yabai -m window --display west; yabai -m display --focus west;
alt + ctrl - o : yabai -m window --display east; yabai -m display --focus east;

# move window to space #
ctrl + shift - q : yabai -m space --focus 1;
ctrl + shift - w : yabai -m space --focus 2;
ctrl + shift - e : yabai -m space --focus 3;
ctrl + shift - r : yabai -m space --focus 4;
ctrl + shift - t : yabai -m space --focus 5;
ctrl + shift - a : yabai -m space --focus 6;
ctrl + shift - s : yabai -m space --focus 7;
ctrl + shift - d : yabai -m space --focus 8;
ctrl + shift - f : yabai -m space --focus 9;
ctrl + shift - g : yabai -m space --focus 10;

# move window to space #
alt + ctrl - q : yabai -m window --space 1;
alt + ctrl - w : yabai -m window --space 2;
alt + ctrl - e : yabai -m window --space 3;
alt + ctrl - r : yabai -m window --space 4;
alt + ctrl - t : yabai -m window --space 5;
alt + ctrl - a : yabai -m window --space 6;
alt + ctrl - s : yabai -m window --space 7;
alt + ctrl - d : yabai -m window --space 8;
alt + ctrl - f : yabai -m window --space 9;
alt + ctrl - g : yabai -m window --space 10;

# stop/start/restart yabai
alt + shift - q : yabai --stop-service
alt + shift - s : yabai --start-service
alt + shift - r : yabai --restart-service
