#change window focus within space
alt + ctrl - j : yabai -m window --focus south
alt + ctrl - k : yabai -m window --focus north
alt + ctrl - h : yabai -m window --focus west
alt + ctrl - l : yabai -m window --focus east

#change focus between external displays (left and right)
alt + ctrl - u: yabai -m display --focus west
alt + ctrl - i: yabai -m display --focus east
alt + ctrl - o: yabai -m display --focus north
alt + ctrl - p: yabai -m display --focus south

alt + ctrl - n: yabai -m window --focus stack.prev
alt + ctrl - m: yabai -m window --focus stack.next

# maximize a window
alt + ctrl - z : yabai -m window --toggle zoom-fullscreen

# toggle window float
alt + ctrl - x : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Activate Stack layout
alt + ctrl - v : yabai -m space --layout stack

# Activate BSP layout
alt + ctrl - c : yabai -m space --layout bsp

# swap windows
alt + shift - j : yabai -m window --swap south
alt + shift - k : yabai -m window --swap north
alt + shift - h : yabai -m window --swap west
alt + shift - l : yabai -m window --swap east

# move window to display left and right
alt + shift - u : yabai -m window --display west; yabai -m display --focus west;
alt + shift - i : yabai -m window --display east; yabai -m display --focus east;
alt + shift - o : yabai -m window --display north; yabai -m display --focus north;
alt + shift - p : yabai -m window --display south; yabai -m display --focus south;

# move window to space #
alt + ctrl - 1 : yabai -m space --focus 1;
alt + ctrl - 2 : yabai -m space --focus 2;
alt + ctrl - 3 : yabai -m space --focus 3;
alt + ctrl - 4 : yabai -m space --focus 4;
alt + ctrl - 5 : yabai -m space --focus 5;
alt + ctrl - 6 : yabai -m space --focus 6;
alt + ctrl - 7 : yabai -m space --focus 7;
alt + ctrl - 8 : yabai -m space --focus 8;
alt + ctrl - 9 : yabai -m space --focus 9;
alt + ctrl - 0 : yabai -m space --focus 10;

# move window to space #
alt + shift - 1 : yabai -m window --space 1;
alt + shift - 2 : yabai -m window --space 2;
alt + shift - 3 : yabai -m window --space 3;
alt + shift - 4 : yabai -m window --space 4;
alt + shift - 5 : yabai -m window --space 5;
alt + shift - 6 : yabai -m window --space 6;
alt + shift - 7 : yabai -m window --space 7;
alt + shift - 8 : yabai -m window --space 8;
alt + shift - 9 : yabai -m window --space 9;
alt + shift - 0 : yabai -m window --space 10;

# stop/start/restart yabai
ctrl + shift - q : yabai --stop-service
ctrl + shift - s : yabai --start-service
ctrl + shift - r : yabai --restart-service
