#change window focus within space
alt + shift - j : yabai -m window --focus south
alt + shift - k : yabai -m window --focus north
alt + shift - h : yabai -m window --focus west
alt + shift - l : yabai -m window --focus east

#change focus between external displays (left and right)
alt + shift - u: yabai -m display --focus west
alt + shift - i: yabai -m display --focus east
alt + shift - o: yabai -m display --focus north
alt + shift - p: yabai -m display --focus south

alt + shift - n: yabai -m window --focus stack.prev
alt + shift - m: yabai -m window --focus stack.next

# maximize a window
cmd + shift - z : yabai -m window --toggle zoom-fullscreen

# toggle window float
cmd + shift - x : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Activate Stack layout
cmd + shift - v : yabai -m space --layout stack

# Activate BSP layout
cmd + shift - c : yabai -m space --layout bsp

# swap windows
cmd + shift - j : yabai -m window --swap south
cmd + shift - k : yabai -m window --swap north
cmd + shift - h : yabai -m window --swap west
cmd + shift - l : yabai -m window --swap east

# move window to display left and right
cmd + shift - u : yabai -m window --display west; yabai -m display --focus west;
cmd + shift - i : yabai -m window --display east; yabai -m display --focus east;
cmd + shift - o : yabai -m window --display north; yabai -m display --focus north;
cmd + shift - p : yabai -m window --display south; yabai -m display --focus south;

# move window to space #
alt + shift - 1 : yabai -m space --focus 1;
alt + shift - 2 : yabai -m space --focus 2;
alt + shift - 3 : yabai -m space --focus 3;
alt + shift - 4 : yabai -m space --focus 4;
alt + shift - 5 : yabai -m space --focus 5;
alt + shift - 6 : yabai -m space --focus 6;
alt + shift - 7 : yabai -m space --focus 7;
alt + shift - 8 : yabai -m space --focus 8;
alt + shift - 9 : yabai -m space --focus 9;
alt + shift - 0 : yabai -m space --focus 10;

# move window to space #
cmd + shift - 1 : yabai -m window --space 1;
cmd + shift - 2 : yabai -m window --space 2;
cmd + shift - 3 : yabai -m window --space 3;
cmd + shift - 4 : yabai -m window --space 4;
cmd + shift - 5 : yabai -m window --space 5;
cmd + shift - 6 : yabai -m window --space 6;
cmd + shift - 7 : yabai -m window --space 7;
cmd + shift - 8 : yabai -m window --space 8;
cmd + shift - 9 : yabai -m window --space 9;
cmd + shift - 0 : yabai -m window --space 10;

# stop/start/restart yabai
ctrl + shift - q : yabai --stop-service
ctrl + shift - s : yabai --start-service
ctrl + shift - r : yabai --restart-service
